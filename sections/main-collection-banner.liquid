{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}



<div class="collection-hero">
  <div class="collection-hero__inner inner">
    <div class="collection-hero__text-wrapper">
      <h1 class="collection-hero__title hidden">
        <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
        {{- collection.title | escape -}}
      </h1>

      {%- assign collections_menu = section.settings.collections_menu.links -%}
      <nav id="collection-nav">
        <ul>
          {%- for link in collections_menu -%}
                <li class="collection-li {% if link.active %}active{% endif %}">
                  <a
                    href="{{ link.url }}"
                    class="collection-link" 
                    {% if link.active %}aria-current="page"{% endif %}>
                      {{ link.title | escape }}
                  </a>
                </li>
          {%- endfor %}
        </ul>
      </nav>


      {%- if section.settings.show_collection_description -%}
        <div class="collection-hero__description rte">{{ collection.description }}</div>
      {%- endif -%}
    </div>

   
  </div>

</div>

<section class="rainbow-banner">
  
  <div class="bg-img bg-hero">
    <img class="bg-parallax" src="{{ 'bg-rainbow-reversed.svg' | asset_url }}>" width="1923" height="2042" role="presentation" alt="rainbow" />
  </div>
  
  
  {% ## ----- Clouds ------ -## %}  
<div class="clouds clouds-wide bottom scrubme">
    <div class="scroll-parent">
      <div class="scroll-element scrub" style="background-image:url({{ 'cloud-wide.svg' | asset_url }});">
      </div>
  </div>
  {% ## ----- End Clouds ------ -## %}



</section><!-- End rainbow-banner-->

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "collection-banner section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "link_list",
      "id": "collections_menu",
      "label": "Collections Menu",
      "info": "Choose a menu to appear at the top of the collections template"
    }
  ]
}
{% endschema %}
