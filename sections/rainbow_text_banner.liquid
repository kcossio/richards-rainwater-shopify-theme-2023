{{ 'section-rainbow-text-banner.css' | asset_url | stylesheet_tag }}

{%- if section.settings.call_to_action_button_link != blank %}
  {% assign class = 'center w-button fade-in' -%}
  {% assign h2_class = 'center w-button fade-in' -%}
{%- else -%}
  {% assign class = '' -%}
  {% assign h2_class = 'center w-button fade-in-left' -%}
{%- endif -%}

<div class="inner {{ class }}">
<h2 class="{{ h2_class }}">{{ section.settings.text }}</h2> 

{%- if section.settings.call_to_action_button_link != blank %}
<a class="button button-lg lg" href="{{ section.settings.call_to_action_button_link }}">{{ section.settings.call_to_action_button_label }}</a>
{%- endif -%}
</div><!--End inner-->

<div class="bg-img bg-hero">
  <img class="bg-parallax" src="{{ 'bg-rainbow.svg' | asset_url }}>" width="1923" height="2042" role="presentation" alt="rainbow" />
</div>


  <div class="clouds clouds-wide bottom">
    <div class="scroll-parent">
      <div class="scroll-element slow primary">
        <img class="cloud" src="{{ 'cloud-wide.svg' | asset_url }}>" width="1877" height="188" role="presentation" alt="cloud" />
      </div>
      <div class="scroll-element slow secondary">
        <img class="cloud" src="{{ 'cloud-wide.svg' | asset_url }}>" width="1877" height="188" role="presentation" alt="cloud" />
      </div>
    </div>


{% schema %}
  {
  "name": "Rainbow Text Banner",
  "class": "rainbow-banner fade-in",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add a text banner, with white text on a rainbow background with clouds"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "info": "Add text to this banner"
    },
        {
      "type": "url",
      "id": "call_to_action_button_link",
      "label": "Call to Action Button Link",
      "info": "Choose a link to add a call to action button to this section"
    },
    {
      "type": "text",
      "id": "call_to_action_button_label",
      "label": "Call to Action Button Label",
      "default": "Learn more",
      "info": "Add a label for the Call to Action button"
    }
  ],
  "presets": [
    {
      "name": "Rainbow Text Banner"
    }
  ]
}  
{% endschema %}

