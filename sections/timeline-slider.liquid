{%- ########################################################################## 
# Label: Heading
# Returns: a string or an empty object(if nothing has been entered)
# Filters: https://shopify.dev/api/liquid/objects#string 
########################################################################## -%}
{{ section.settings.heading }} 

{%- for block in section.blocks -%}
  {%- case block.type -%}

    {%- when 'timeline_slide' -%}
      {%- ########################################################################## 
      # Label: Hero Image
      # Returns: an image object or nil(if no selection has been made)
      # Image Properties: https://shopify.dev/api/liquid/objects#image
      # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
      ########################################################################## -%}
      {%- assign hero_image = block.settings.hero_image -%}
      {{ hero_image | image_url: width: hero_image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}

      {%- ########################################################################## 
      # Label: Year
      # Returns: a string or an empty object(if nothing has been entered)
      # Filters: https://shopify.dev/api/liquid/objects#string 
      ########################################################################## -%}
      {{ block.settings.year }} 

      {%- ########################################################################## 
      # Label: Title
      # Returns: a string or an empty object(if nothing has been entered)
      # Filters: https://shopify.dev/api/liquid/objects#string 
      ########################################################################## -%}
      {{ block.settings.title }} 

      {%- ########################################################################## 
      # Label: Content
      # Returns: a string or an empty object(if nothing has been entered)
      # Filters: https://shopify.dev/api/liquid/objects#string 
      ########################################################################## -%}
      {{ block.settings.content }} 

  {%- endcase -%}
{%- endfor -%}

{% schema %}
  {
  "name": "Timeline Slider",
  "class": "section-timeline slider-timeline-wrap",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Add a heading for this timeline slider"
    }
  ],
  "blocks": [
    {
      "name": "Timeline Slide",
      "type": "timeline_slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "hero_image",
          "label": "Hero Image",
          "info": "Upload or choose a hero image for this slide"
        },
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "info": "Enter a year for this slide.  This will be used to create the slide navigation"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Enter a title for the slide"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "info": "Add a short piece of text content for the slide"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Timeline Slider"
    }
  ]
}  
{% endschema %}

