
<header class="product-info-col-header">
<h2 class="product-info-col-heading">{{ section.settings.heading }}</h2>
<h3 class="product-info-col-subheading">{{ section.settings.subheading }} </h3>
</header>



{%- for block in section.blocks -%}
  {%- case block.type -%}

    {%- when 'left_product_column' -%}
      <div class="product-info-col-1">

        {%- assign product_image = block.settings.product_image -%}
        {%- if product_image != blank -%}
        {{ product_image | image_url: width: product_image.width | image_tag: class: 'product-info-col-img product-info-col-img-1', loading: 'lazy' }}
        {%- endif -%}


        <h2 class="product-col-name imperial">
          <span class="vadelma">{{ block.settings.product_name_line_1 }}</span>
          {{ block.settings.product_name_line_2 }} 
        </h2>
      
        <a class="button" href="{{ block.settings.call_to_action_button_link }}">{{ block.settings.call_to_action_button_label }} </a>

   
        {%- if block.settings.drop_message_1_of_3 != blank -%}
          <div class="info-drop info-drop-1">
            <p class="info-drop-message">{{ block.settings.drop_message_1_of_3 }} </p>
          </div>
        {%- endif -%}

        {%- if block.settings.drop_message_2_of_3 != blank -%}
          <div class="info-drop info-drop-2">
            <p class="info-drop-message">{{ block.settings.drop_message_2_of_3 }} </p>
          </div>
        {%- endif -%}
        
        {%- if block.settings.drop_message_3_of_3 != blank -%}
          <div class="info-drop info-drop-3">
            <p class="info-drop-message">{{ block.settings.drop_message_3_of_3 }} </p>
          </div>
        {%- endif -%}

      </div><!--End product-info-col-1-->

    {%- when 'right_product_column' -%}
      <div class="product-info-col-2">

        {%- assign product_image = block.settings.product_image -%}
        {%- if product_image != blank -%}
        {{ product_image | image_url: width: product_image.width | image_tag: class: 'product-info-col-img product-info-col-img-2', loading: 'lazy' }}
        {%- endif -%}


        <h2 class="product-col-name imperial">
          <span class="vadelma">{{ block.settings.product_name_line_1 }}</span>
          {{ block.settings.product_name_line_2 }} 
        </h2>
      
        <a class="button" href="{{ block.settings.call_to_action_button_link }}">{{ block.settings.call_to_action_button_label }} </a>

   
        {%- if block.settings.drop_message_1_of_3 != blank -%}
          <div class="info-drop info-drop-1">
            <p class="info-drop-message">{{ block.settings.drop_message_1_of_3 }} </p>
          </div>
        {%- endif -%}

        {%- if block.settings.drop_message_2_of_3 != blank -%}
          <div class="info-drop info-drop-2">
            <p class="info-drop-message">{{ block.settings.drop_message_2_of_3 }} </p>
          </div>
        {%- endif -%}
        
        {%- if block.settings.drop_message_3_of_3 != blank -%}
          <div class="info-drop info-drop-3">
            <p class="info-drop-message">{{ block.settings.drop_message_3_of_3 }} </p>
          </div>
        {%- endif -%}


    </div><!--End product-info-col-2-->

  {%- endcase -%}
{%- endfor -%}

