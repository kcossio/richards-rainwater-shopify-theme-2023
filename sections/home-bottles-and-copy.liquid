{{ section.settings.call_to_action_button_link }} 

{% schema %}
  {
  "name": "Home - Bottles + Copy",
  "class": "home-bottles-copy",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bottle_image_1",
      "label": "Bottle Image 1",
      "info": "Upload the first of two bottle images"
    },
    {
      "type": "image_picker",
      "id": "bottle_image_2",
      "label": "Bottle Image 2",
      "info": "Upload the second of two bottle images"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "info": "Add a subheading for this section"
    },
    {
      "type": "html",
      "id": "heading",
      "label": "Heading",
      "default": "<span>RENEWABLE.</span>\n<span>REFRESHING. </span>\n<span>RAINWATER.</span>",
      "info": "Add heading text for this section. Note: Use HTML here to create animated effects."
    },
    {
      "type": "text",
      "id": "call_to_action_button_label",
      "label": "Call to Action Button Label",
      "default": "Learn More",
      "info": "Enter a label for the Call to Action button"
    },
    {
      "type": "url",
      "id": "call_to_action_button_link",
      "label": "Call to Action Button Link",
      "info": "Enter the link the call to action button should go to"
    }
  ],
  "presets": [
    {
      "name": "Home - Bottles + Copy"
    }
  ]
}  
{% endschema %}

