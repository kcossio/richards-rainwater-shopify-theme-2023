########################################################################## -%}
{%- assign bottle_image_2 = section.settings.bottle_image_2 -%}
{{ bottle_image_2 | image_url: width: bottle_image_2.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}

{%- ########################################################################## 
# Label: Subheading
# Returns: a string or an empty object(if nothing has been entered)
# Filters: https://shopify.dev/api/liquid/objects#string 
########################################################################## -%}
{{ section.settings.subheading }} 

{%- ########################################################################## 
# Label: Heading
# Returns: a string or an empty object(if nothing has been entered)
# Filters: https://shopify.dev/api/liquid/objects#string 
########################################################################## -%}
{{ section.settings.heading }} 

{%- ########################################################################## 
# Label: Call to Action Button Label
# Returns: a string or an empty object(if nothing has been entered)
