{{ 'section-logo-slider.css' | asset_url | stylesheet_tag }}

<header class="logo-slider-header">

  <h2>{{ section.settings.heading }}</h2>

  {%- if section.settings.subheading != blank -%}
  <p>{{ section.settings.subheading }}</p>
  {%- endif -%}

</header>

{% render 'global-metafields-retail-logos' %}

{% schema %}
  {
  "name": "Stores Logo Slider",
  "class": "section-logo-slider",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add the Retail Logos slider to this page. Note: All retail logos are added and edited via Shopify meta fields so they can be accessed globally."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Richard’s near you.",
      "info": "Enter text for the heading here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find Richard’s near you.",
      "info": "Add text for an optional subheading here"
    }
  ],
  "presets": [
    {
      "name": "Stores Logo Slider"
    }
  ]
}  
{% endschema %}

