{{ 'section-careers-list.css' | asset_url | stylesheet_tag }}

<div class="inner">
  <ul class="careers-list">
  {%- for block in section.blocks -%}
    {%- case block.type -%}

      {%- when 'career_box' -%}

        <li class="career-block">

          <h2>{{ block.settings.title }}</h2>

          <span class="location">{{ block.settings.location }}</span>

          <a class="button career-link-button" href="{{ block.settings.link }} ">Learn More</a>
        

        </li><!--End career-block-->

    {%- endcase -%}
  {%- endfor -%}
  </ul><!--End careers-list-->
</div>

{% schema %}
  {
  "name": "Careers List",
  "class": "careers-list",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "name": "Career Block",
      "type": "career_box",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Enter the title of the career opportunity"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "info": "Enter the location of the opportunity"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Choose the link to the career opportunity page"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Careers List"
    }
  ]
}  
{% endschema %}

