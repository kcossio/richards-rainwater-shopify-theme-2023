    <div class="locator-slider-wrap on-{{ product.id }}">
      {%- for block in section.blocks -%}
        {%- if block.settings.product_hide != product.handle -%}

          <h2>{{ section.settings.heading }}</h2>

          {% render 'store-locator-form' %}

        {%- endif -%}
      {%- endfor -%}

    {% render 'global-metafields-retail-logos' %}

    </div><!--End locator-slider-wrap-->



{% schema %}
  {
  "name": "Locator + Logo Slider",
  "class": "section-locator-w-slider",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add a Store Locator form, with the retail logos slider to this page. Note: All retail logos are added and edited via Shopify meta fields so they can be accessed globally."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Richardâ€™s near you.",
      "info": "Enter text for the heading here"
    }
  ],
  "blocks": [
    {
      "name": "Hide Title/Form",
      "type": "hide_title_on_product",
      "settings": [
        {
          "type": "product",
          "id": "product_hide",
          "label": "Product",
          "info": "Choose a product where you'd like to hide the title and form in this section (and just show the slider)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Locator + Logo Slider"
    }
  ]
}  
{% endschema %}

