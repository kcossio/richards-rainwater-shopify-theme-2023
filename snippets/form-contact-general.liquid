{%- form 'contact', id: 'ContactForm', class: 'form-contact-form' -%}
    {%- if form.posted_successfully? -%}
      <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
        {% render 'icon-success' %}
        {{ 'templates.contact.form.post_success' | t }}
      </h2>
    {%- elsif form.errors -%}
      <div class="form__message">
        <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
          {% render 'icon-error' %}
          {{ 'templates.contact.form.error_heading' | t }}
        </h2>
      </div>
      <ul class="form-status-list caption-large" role="list">
        <li>
          <a href="#ContactForm-email" class="link">
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}
          </a>
        </li>
      </ul>
    {%- endif -%}
    <div class="contact__fields">

      <div class="field">
        <input
          class="field__input"
          autocomplete="name"
          type="text"
          id="ContactForm-name"
          name="contact[{{ 'templates.contact.form.name' | t }}]"
          value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          placeholder="{{ 'templates.contact.form.name' | t }}"
        >
        <label class="label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
      </div><!--End field-->

      <div class="field field--with-error">
        <input
          autocomplete="email"
          type="email"
          id="ContactForm-email"
          class="field__input"
          name="contact[email]"
          spellcheck="false"
          autocapitalize="off"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ContactForm-email-error"
          {% endif %}
          placeholder="Email Address"
          oninvalid="this.setCustomValidity('Please fill in your email address.')"
        >
        <label class="label" for="ContactForm-email">
          Email Address
          <span aria-hidden="true">*</span></label
        >
        {%- if form.errors contains 'email' -%}
          <small class="contact__field-error" id="ContactForm-email-error">
            <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
            <span class="form__message">
              {%- render 'icon-error' -%}
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </span>
          </small>
        {%- endif -%}
      </div><!--End field -->

    </div><!-- End contact__fields-->

    <div class="contact__fields">

      <div class="field">
        
        <input type="text" name="contact[subject]" class="field__input" id="subject" placeholder="Subject"/>
        <label class="label" for="subject">Subject</label>
      </div><!--End field-->

      <div class="field">
        <input
          type="tel"
          id="ContactForm-phone"
          class="field__input"
          autocomplete="tel"
          name="contact[{{ 'templates.contact.form.phone' | t }}]"
          pattern="[0-9\-]*"
          value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          placeholder="{{ 'templates.contact.form.phone' | t }}"
        >
        <label class="label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
      </div><!--End field-->

    </div><!--End contact__fields-->
   
    <div class="field">
      <textarea
        rows="3"
        id="ContactForm-body"
        class="text-area field__input"
        name="contact[message]"
        placeholder="Message"
      >
        {{- form.body -}}
      </textarea>
      <label class="form__label label" for="ContactForm-body">Message</label>
    </div><!--End field-->
    <div class="contact__button">
      <button type="submit" class="button">
        {{ 'templates.contact.form.send' | t }}
      </button>
    </div>
  {%- endform -%}

  <script>
    var offset = $(':target').offset();
    var scrollto = offset.top - 120; // minus fixed header height
    jQuery('html, body').animate({ scrollTop:scrollto }, 0);
  </script>